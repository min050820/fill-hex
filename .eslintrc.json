{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "no-unexpected-multiline": "error",
        "semi": [
            "error",
            "never",
            {
                "beforeStatementContinuationChars": "always"
            }
        ],
        "semi-style": [
            "error",
            "first"
        ],
        "quotes": ["warn", "single"]
    }
}